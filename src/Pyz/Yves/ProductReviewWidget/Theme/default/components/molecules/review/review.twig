{% extends molecule('review', '@SprykerShop:ProductReviewWidget') %}

{% block body %}
    <div class="{{ config.name }}__summary">
        {{ data.summary | e('html') }}

        {% include molecule('rating-selector', 'ProductReviewWidget') with {
            class: config.name ~ '__stars',
            data: {
                value: data.ratingValue,
                maxValue: data.ratingMaxValue,
                useHalfSteps: true,
            },
            attributes: {
                readonly: true,
            },
        } only %}
    </div>
    <div class="{{ config.name }}__author">
        {{ data.nickname | e('html')}} -
        {{ data.createdAt }}
    </div>
    <div class="{{ config.name }}__description">
        {{ data.description | e('html')}}
    </div>
{% endblock %}
